                </ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/p232"
                    android:src="@drawable/p232"
                    android:layout_height="50dp">
                </ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/p233"
                    android:src="@drawable/p233"
                    android:layout_height="50dp">
                </ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/p234"
                    android:src="@drawable/p234"
                    android:layout_height="50dp">
                </ImageView>
            </LinearLayout>
            <!--                字-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
