                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:paddingLeft="10dp"
                    android:layout_height="30dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:paddingLeft="10dp"
                    android:layout_height="30dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:paddingLeft="10dp"
                    android:layout_height="30dp"
